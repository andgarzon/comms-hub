<div class="announcement-container">
  <div class="page-header">
    <h1>‚ú® Create New Announcement</h1>
    <p>Craft your message once, deliver it everywhere</p>
  </div>

  <%= form_with model: @announcement, url: announcements_path, method: :post, data: { turbo: false } do |f| %>
    <% if @announcement.errors.any? %>
      <div class="error-messages">
        <h3>‚ö†Ô∏è <%= pluralize(@announcement.errors.count, "error") %> prevented this announcement from being saved:</h3>
        <ul>
          <% @announcement.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Main Content Card -->
    <div class="card">
      <div class="card-header">
        <div class="card-header-icon">üìù</div>
        <h2>Announcement Details</h2>
      </div>

      <div class="form-group">
        <label class="form-label">Title</label>
        <%= f.text_field :title, class: "form-input", placeholder: "Enter a clear, engaging title..." %>
      </div>

      <div class="form-group">
        <label class="form-label">Base Message</label>
        <%= f.text_area :base_body, class: "form-textarea", rows: 6, placeholder: "Write your core message here. This will be the foundation for all channels..." %>
        <div class="hint-text">This is your master copy. AI can help adapt it for different channels.</div>
      </div>

      <%= button_tag class: "btn btn-secondary", type: "submit", name: "improve_with_ai", value: "1", onclick: "document.getElementById('ai-loading').style.display='flex'; return true;" do %>
        ü§ñ Improve with AI
      <% end %>
    </div>

    <!-- Channel-Specific Messages -->
    <div class="card">
      <div class="card-header">
        <div class="card-header-icon">üì±</div>
        <h2>Channel-Specific Messages</h2>
      </div>

      <div class="form-group">
        <label class="form-label">üìß Email Version</label>
        <%= f.text_area :email_body, class: "form-textarea", rows: 8, placeholder: "Detailed email message with full context..." %>
        <div class="hint-text">Email allows for longer, more detailed content</div>
      </div>

      <div class="form-group">
        <label class="form-label">üí¨ Slack Version</label>
        <%= f.text_area :slack_body, class: "form-textarea", rows: 4, placeholder: "Concise Slack message..." %>
        <div class="hint-text">Keep it brief - 2-3 sentences work best</div>
      </div>

      <div class="form-group">
        <label class="form-label">üì≤ WhatsApp Version</label>
        <%= f.text_area :whatsapp_body, class: "form-textarea", rows: 3, placeholder: "Short WhatsApp message..." %>
        <div class="hint-text">Ultra-concise - 1-2 sentences ideal</div>
      </div>
    </div>

    <!-- Delivery Settings -->
    <div class="card">
      <div class="card-header">
        <div class="card-header-icon">üöÄ</div>
        <h2>Delivery Settings</h2>
      </div>

      <div class="form-group">
        <label class="form-label">Choose Channels</label>
        <div class="checkbox-group">
          <div class="checkbox-item">
            <%= f.check_box :send_to_slack %>
            <%= f.label :send_to_slack, "üí¨ Slack" %>
          </div>
          <div class="checkbox-item">
            <%= f.check_box :send_to_email %>
            <%= f.label :send_to_email, "üìß Email" %>
          </div>
          <div class="checkbox-item">
            <%= f.check_box :send_to_whatsapp %>
            <%= f.label :send_to_whatsapp, "üì≤ WhatsApp" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="form-label">‚è∞ Schedule (Optional)</label>
        <%= f.datetime_local_field :scheduled_for, class: "form-input" %>
        <div class="hint-text">Leave blank to send immediately</div>
      </div>
    </div>

    <!-- Target Audiences -->
    <% if @slack_audiences.present? || @email_audiences.present? || @whatsapp_audiences.present? %>
      <div class="card">
        <div class="card-header">
          <div class="card-header-icon">üë•</div>
          <h2>Target Audiences</h2>
        </div>

        <div class="audience-section">
          <% if @slack_audiences.present? %>
            <div class="audience-group">
              <h4>üí¨ Slack Audiences</h4>
              <%= f.collection_check_boxes :audience_ids, @slack_audiences, :id, :name do |b| %>
                <div class="audience-checkbox">
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @email_audiences.present? %>
            <div class="audience-group">
              <h4>üìß Email Audiences</h4>
              <%= f.collection_check_boxes :audience_ids, @email_audiences, :id, :name do |b| %>
                <div class="audience-checkbox">
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @whatsapp_audiences.present? %>
            <div class="audience-group">
              <h4>üì≤ WhatsApp Audiences</h4>
              <%= f.collection_check_boxes :audience_ids, @whatsapp_audiences, :id, :name do |b| %>
                <div class="audience-checkbox">
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div style="text-align: center; margin-top: 32px;">
      <%= f.submit "Create Announcement", class: "btn btn-success" %>
    </div>

  <% end %>
</div>

<!-- Loading overlay -->
<div id="ai-loading">
  <div class="loading-content">
    <div class="spinner"></div>
    <p>‚ú® AI is improving your announcement...</p>
  </div>
</div>
