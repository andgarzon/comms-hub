<% 
  # Load improved announcement if provided, otherwise create new!
  if params[:improved_id].present?
    @announcement = Announcement.find(params[:improved_id])
    # Create a NEW announcement with the improved content, don't use the existing one
    @announcement = Announcement.new(@announcement.attributes.except('id', 'created_at', 'updated_at', 'user_id', 'status'))
  end
%>

<style>
