<% content_for :title, "WhatsApp Audiences" %>

<div class="page-header page-header--row">
  <div>
    <h2 class="page-header__title">WhatsApp Audiences</h2>
  </div>
  <div>
    <%= link_to "New WhatsApp Audience", new_whatsapp_audience_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @audiences.any? %>
  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Recipients</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @audiences.each do |audience| %>
          <tr>
            <td class="font-medium"><%= audience.name %></td>
            <td><%= audience.whatsapp_list.length %> recipient<%= audience.whatsapp_list.length == 1 ? "" : "s" %></td>
            <td>
              <div class="table-actions">
                <%= link_to "Edit", edit_whatsapp_audience_path(audience), class: "btn btn--xs btn-secondary" %>
                <%= button_to "Delete", audience, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--xs btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="card">
    <div class="empty-state">
      <div class="empty-state__icon">ðŸ“±</div>
      <p>No WhatsApp audiences yet.</p>
      <div class="empty-state__actions">
        <%= link_to "Create WhatsApp Audience", new_whatsapp_audience_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
