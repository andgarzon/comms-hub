<div class="page-header">
  <h2 class="page-header__title">New WhatsApp Audience</h2>
</div>

<div class="max-w-600">
  <%= form_with model: @audience, url: whatsapp_audiences_path do |f| %>
    <% if @audience.errors.any? %>
      <div class="alert alert-danger error-list">
        <strong class="error-list__title">
          <%= pluralize(@audience.errors.count, "error") %> prohibited this audience from being saved:
        </strong>
        <ul class="error-list__items">
          <% @audience.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mb-20">
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-0">
        <%= f.label :whatsapp_recipients, "WhatsApp recipients (one per line or comma-separated)", class: "form-label" %>
        <%= f.text_area :whatsapp_recipients, rows: 6, class: "form-control" %>
      </div>
    </div>

    <div class="form-actions">
      <%= link_to "Back to WhatsApp Audiences", whatsapp_audiences_path, class: "btn btn-secondary" %>
      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
