<div class="page-header page-header--row">
  <div>
    <h2 class="page-header__title">Integrations</h2>
    <p class="page-header__description">Configure your communication channels and services</p>
  </div>
  <div>
    <%= link_to "Back to Settings", settings_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="grid-auto-fill-280">

  <!-- ChatGPT / OpenAI -->
  <%= link_to openai_integration_path, class: "settings-card-link" do %>
    <div class="card settings-card">
      <div class="settings-card__header">
