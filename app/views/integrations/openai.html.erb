<div class="page-header page-header--row">
  <div>
    <div class="breadcrumb">
      <%= link_to "Settings", settings_path, class: "breadcrumb__link" %>
      <span class="breadcrumb__separator">/</span>
      <%= link_to "Integrations", integrations_path, class: "breadcrumb__link" %>
      <span class="breadcrumb__separator">/</span>
      <span class="breadcrumb__current">ChatGPT / OpenAI</span>
    </div>
    <h2 class="page-header__title">ChatGPT / OpenAI Integration</h2>
    <p class="page-header__description">Configure your OpenAI API connection for AI-powered message rewriting</p>
  </div>
  <div>
    <%= link_to "Back to Integrations", integrations_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="max-w-700">

  <!-- Status Card -->
  <div class="card mb-24">
    <div class="status-card">
      <div class="status-card__icon <%= @setting.configured? ? 'status-card__icon--openai-success' : (@setting.last_error.present? ? 'status-card__icon--openai-error' : 'status-card__icon--openai-neutral') %>">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="<%= @setting.configured? ? '#10A37F' : (@setting.last_error.present? ? '#dc3545' : '#6c757d') %>">
          <path d="M22.282 9.821a5.985 5.985 0 0 0-.516-4.91 6.046 6.046 0 0 0-6.51-2.9A6.065 6.065 0 0 0 4.981 4.18a5.985 5.985 0 0 0-3.998 2.9 6.046 6.046 0 0 0 .743 7.097 5.98 5.98 0 0 0 .51 4.911 6.051 6.051 0 0 0 6.515 2.9A5.985 5.985 0 0 0 13.26 24a6.056 6.056 0 0 0 5.772-4.206 5.99 5.99 0 0 0 3.997-2.9 6.056 6.056 0 0 0-.747-7.073zM13.26 22.43a4.476 4.476 0 0 1-2.876-1.04l.141-.081 4.779-2.758a.795.795 0 0 0 .392-.681v-6.737l2.02 1.168a.071.071 0 0 1 .038.052v5.583a4.504 4.504 0 0 1-4.494 4.494zM3.6 18.304a4.47 4.47 0 0 1-.535-3.014l.142.085 4.783 2.759a.771.771 0 0 0 .78 0l5.843-3.369v2.332a.08.08 0 0 1-.033.062L9.74 19.95a4.5 4.5 0 0 1-6.14-1.646zM2.34 7.896a4.485 4.485 0 0 1 2.366-1.973V11.6a.766.766 0 0 0 .388.676l5.815 3.355-2.02 1.168a.076.076 0 0 1-.071 0l-4.83-2.786A4.504 4.504 0 0 1 2.34 7.872zm16.597 3.855l-5.833-3.387L15.119 7.2a.076.076 0 0 1 .071 0l4.83 2.791a4.494 4.494 0 0 1-.676 8.105v-5.678a.79.79 0 0 0-.407-.667zm2.01-3.023l-.141-.085-4.774-2.782a.776.776 0 0 0-.785 0L9.409 9.23V6.897a.066.066 0 0 1 .028-.061l4.83-2.787a4.5 4.5 0 0 1 6.68 4.66zm-12.64 4.135l-2.02-1.164a.08.08 0 0 1-.038-.057V6.075a4.5 4.5 0 0 1 7.375-3.453l-.142.08L8.704 5.46a.795.795 0 0 0-.393.681zm1.097-2.365l2.602-1.5 2.607 1.5v2.999l-2.597 1.5-2.607-1.5z"/>
        </svg>
      </div>
      <div class="status-card__body">
        <div class="status-card__header">
          <h3 class="status-card__title">Connection Status</h3>
          <% if @setting.configured? %>
            <span class="badge badge-success">Connected</span>
          <% elsif @setting.last_error.present? %>
            <span class="badge badge-error">Error</span>
          <% else %>
            <span class="badge badge-neutral">Not Configured</span>
          <% end %>
        </div>
        <% if @setting.last_error.present? %>
          <p class="status-card__message status-card__message--error"><%= @setting.last_error %></p>
        <% elsif @setting.configured? %>
          <p class="status-card__message">OpenAI API is configured. Model: <strong><%= @setting.model_name || "gpt-4o-mini" %></strong></p>
        <% else %>
          <p class="status-card__message">Enter your OpenAI API key to enable AI-powered message rewriting.</p>
        <% end %>
        <% if @setting.last_tested_at.present? %>
          <p class="status-card__timestamp">Last tested: <%= @setting.last_tested_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Configuration Form -->
  <div class="card">
    <div class="card__header">
      <h3 class="card__title">API Configuration</h3>
    </div>

    <%= form_tag(openai_integration_path, method: :patch, data: { turbo: false }) do %>
      <div class="form-field-row">
        <div>
          <label for="api_key" class="form-field-label">
            API Key <span class="form-required">*</span>
          </label>
          <input type="password" id="api_key" name="api_key"
                 value="<%= @setting.api_key %>"
                 placeholder="sk-..." required class="form-control">
          <% if @setting.masked_api_key.present? %>
            <p class="form-hint">Saved: <code><%= @setting.masked_api_key %></code></p>
          <% end %>
          <p class="form-hint">Your OpenAI API key. Get one at <a href="https://platform.openai.com/api-keys" target="_blank" class="text-blue">platform.openai.com</a>.</p>
        </div>

        <div>
          <label for="organization_id" class="form-field-label">Organization ID</label>
          <input type="text" id="organization_id" name="organization_id"
                 value="<%= @setting.organization_id %>"
                 placeholder="org-... (optional)" class="form-control">
          <p class="form-hint">Optional. Required only if you belong to multiple organizations.</p>
        </div>

        <div>
          <label for="model_name" class="form-field-label">Model</label>
          <select id="model_name" name="model_name" class="form-control">
            <option value="gpt-4o-mini" <%= 'selected' if (@setting.model_name || 'gpt-4o-mini') == 'gpt-4o-mini' %>>GPT-4o Mini (Recommended - Fast & Affordable)</option>
            <option value="gpt-4o" <%= 'selected' if @setting.model_name == 'gpt-4o' %>>GPT-4o (Most Capable)</option>
            <option value="gpt-4-turbo" <%= 'selected' if @setting.model_name == 'gpt-4-turbo' %>>GPT-4 Turbo</option>
            <option value="gpt-3.5-turbo" <%= 'selected' if @setting.model_name == 'gpt-3.5-turbo' %>>GPT-3.5 Turbo (Budget)</option>
          </select>
          <p class="form-hint">The model used for AI-powered message rewriting.</p>
        </div>

        <div class="integration-actions">
          <button type="submit" class="btn btn-primary">Save Configuration</button>
          <div data-react-component="TestConnectionButton"
               data-react-props='<%= { testUrl: test_openai_integration_path, csrfToken: form_authenticity_token, successColor: "#10A37F" }.to_json %>'></div>
        </div>
      </div>
    <% end %>
  </div>

</div>
