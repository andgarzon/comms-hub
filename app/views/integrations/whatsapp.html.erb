<div class="page-header page-header--row">
  <div>
    <div class="breadcrumb">
      <%= link_to "Settings", settings_path, class: "breadcrumb__link" %>
      <span class="breadcrumb__separator">/</span>
      <%= link_to "Integrations", integrations_path, class: "breadcrumb__link" %>
      <span class="breadcrumb__separator">/</span>
      <span class="breadcrumb__current">WhatsApp</span>
    </div>
    <h2 class="page-header__title">WhatsApp Integration</h2>
    <p class="page-header__description">Configure your WhatsApp Cloud API connection</p>
  </div>
  <div>
    <%= link_to "Back to Integrations", integrations_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="max-w-700">

  <!-- Status Card -->
  <div class="card mb-24">
    <div class="status-card">
      <div class="status-card__icon <%= @setting.configured? ? 'status-card__icon--success' : (@setting.last_error.present? ? 'status-card__icon--error' : 'status-card__icon--neutral') %>">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="<%= @setting.configured? ? '#25D366' : (@setting.last_error.present? ? '#dc3545' : '#6c757d') %>">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
      </div>
      <div class="status-card__body">
        <div class="status-card__header">
          <h3 class="status-card__title">Connection Status</h3>
          <% if @setting.configured? %>
            <span class="badge badge-success">Connected</span>
          <% elsif @setting.last_error.present? %>
            <span class="badge badge-error">Error</span>
          <% else %>
            <span class="badge badge-neutral">Not Configured</span>
          <% end %>
        </div>
        <% if @setting.last_error.present? %>
          <p class="status-card__message status-card__message--error"><%= @setting.last_error %></p>
        <% elsif @setting.configured? %>
          <p class="status-card__message">WhatsApp Cloud API is configured and ready to send messages.</p>
        <% else %>
          <p class="status-card__message">Enter your Meta Cloud API credentials below to get started.</p>
        <% end %>
        <% if @setting.last_tested_at.present? %>
          <p class="status-card__timestamp">Last tested: <%= @setting.last_tested_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Configuration Form -->
  <div class="card">
    <div class="card__header">
      <h3 class="card__title">API Configuration</h3>
    </div>

    <%= form_tag(whatsapp_integration_path, method: :patch, data: { turbo: false }) do %>
      <div class="form-field-row">
        <div>
          <label for="phone_number_id" class="form-field-label">
            Phone Number ID <span class="form-required">*</span>
          </label>
          <input type="text" id="phone_number_id" name="phone_number_id"
                 value="<%= @setting.phone_number_id %>"
                 placeholder="e.g. 123456789012345" required class="form-control">
          <p class="form-hint">Found in your Meta Developer Dashboard under WhatsApp > API Setup.</p>
        </div>

        <div>
          <label for="access_token" class="form-field-label">
            Access Token <span class="form-required">*</span>
          </label>
          <input type="password" id="access_token" name="access_token"
                 value="<%= @setting.access_token %>"
                 placeholder="Your permanent or temporary access token" required class="form-control">
          <p class="form-hint">Generate a permanent token in your Meta Business Settings > System Users.</p>
        </div>

        <div>
          <label for="business_account_id" class="form-field-label">WhatsApp Business Account ID</label>
          <input type="text" id="business_account_id" name="business_account_id"
                 value="<%= @setting.business_account_id %>"
                 placeholder="e.g. 987654321098765 (optional)" class="form-control">
          <p class="form-hint">Optional. Used for webhook configuration and account management.</p>
        </div>

        <div>
          <label for="sender_phone" class="form-field-label">Sender Phone Number</label>
          <input type="text" id="sender_phone" name="sender_phone"
                 value="<%= @setting.sender_phone %>"
                 placeholder="e.g. +1 555 123 4567 (optional, for reference)" class="form-control">
          <p class="form-hint">Your WhatsApp sender phone number for display purposes.</p>
        </div>

        <div class="integration-actions">
          <button type="submit" class="btn btn-primary">Save Configuration</button>
          <div data-react-component="TestConnectionButton"
               data-react-props='<%= { testUrl: test_whatsapp_integration_path, csrfToken: form_authenticity_token, successColor: "#25D366" }.to_json %>'></div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Help Card -->
  <div class="card mt-24">
    <div class="card__header">
      <h3 class="card__title">Setup Guide</h3>
    </div>
    <div class="setup-guide">
      <ol>
        <li>Go to <a href="https://developers.facebook.com/" target="_blank" class="text-blue">Meta for Developers</a> and create an app (type: Business).</li>
        <li>Add the <strong>WhatsApp</strong> product to your app.</li>
        <li>Under <strong>WhatsApp > API Setup</strong>, find your <strong>Phone Number ID</strong> and generate a temporary access token.</li>
        <li>For production, create a <strong>System User</strong> in your Meta Business Settings and generate a <strong>permanent token</strong>.</li>
        <li>Enter the credentials above and click <strong>Test Connection</strong> to verify.</li>
        <li>Add phone numbers to your <a href="<%= whatsapp_audiences_path %>" class="text-blue">WhatsApp Audiences</a> to start sending announcements.</li>
      </ol>
    </div>
  </div>

</div>
