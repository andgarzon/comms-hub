<style>
  .audiences-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 48px;
  }
  
  .page-header h1 {
    font-size: 42px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 12px 0;
  }
  
  .page-header p {
    font-size: 18px;
    color: #6c757d;
    margin: 0;
  }
  
  .stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 48px;
  }
  
  .stat-card {
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    text-align: center;
  }
  
  .stat-icon {
    font-size: 36px;
    margin-bottom: 12px;
  }
  
  .stat-number {
    font-size: 32px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 4px 0;
  }
  
  .stat-label {
    font-size: 14px;
    color: #6c757d;
    margin: 0;
  }
  
  .channels-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }
  
  .channel-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    padding: 0;
    overflow: hidden;
    transition: all 0.3s;
    text-decoration: none;
    display: block;
  }
  
  .channel-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.15);
  }
  
  .channel-header {
    padding: 32px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
  }
  
  .channel-icon {
    font-size: 56px;
    margin-bottom: 16px;
  }
  
  .channel-header h2 {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }
  
  .channel-header p {
    margin: 0;
    opacity: 0.9;
    font-size: 14px;
  }
  
  .channel-body {
    padding: 24px;
  }
  
  .channel-stat {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #e9ecef;
  }
  
  .channel-stat:last-child {
    border-bottom: none;
  }
  
  .channel-stat-label {
    color: #6c757d;
    font-size: 14px;
  }
  
  .channel-stat-value {
    font-weight: 600;
    color: #1a1a1a;
    font-size: 16px;
  }
  
  .channel-actions {
    padding: 20px 24px;
    background: #f8f9fa;
    display: flex;
    gap: 12px;
  }
  
  .btn {
    flex: 1;
    padding: 12px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s;
    display: block;
  }
  
  .btn-primary {
    background: #667eea;
    color: white;
  }
  
  .btn-primary:hover {
    background: #5568d3;
  }
  
  .btn-secondary {
    background: white;
    color: #667eea;
    border: 2px solid #e9ecef;
  }
  
  .btn-secondary:hover {
    border-color: #667eea;
    background: #f8f9ff;
  }
  
  .slack-gradient {
    background: linear-gradient(135deg, #4A154B 0%, #611f69 100%);
  }
  
  .email-gradient {
    background: linear-gradient(135deg, #EA4335 0%, #FBBC04 100%);
  }
  
  .whatsapp-gradient {
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
  }
</style>

<div class="audiences-container">
  <div class="page-header">
    <h1>ðŸ‘¥ Manage Audiences</h1>
    <p>Organize your recipients by channel and group</p>
  </div>

  <!-- Stats Row -->
  <div class="stats-row">
    <div class="stat-card">
      <div class="stat-icon">ðŸ‘¥</div>
      <p class="stat-number"><%= Audience.count %></p>
      <p class="stat-label">Total Audiences</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">ðŸ’¬</div>
      <p class="stat-number"><%= SlackAudience.count %></p>
      <p class="stat-label">Slack Audiences</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">ðŸ“§</div>
      <p class="stat-number"><%= EmailAudience.count %></p>
      <p class="stat-label">Email Audiences</p>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">ðŸ“²</div>
      <p class="stat-number"><%= WhatsappAudience.count %></p>
      <p class="stat-label">WhatsApp Audiences</p>
    </div>
  </div>

  <!-- Channels Grid -->
  <div class="channels-grid">
    <!-- Slack Card -->
    <div class="channel-card">
      <div class="channel-header slack-gradient">
        <div class="channel-icon">ðŸ’¬</div>
        <h2>Slack Audiences</h2>
        <p>Manage your Slack channels</p>
      </div>
      
      <div class="channel-body">
        <div class="channel-stat">
          <span class="channel-stat-label">Total audiences</span>
          <span class="channel-stat-value"><%= SlackAudience.count %></span>
        </div>
        <div class="channel-stat">
          <span class="channel-stat-label">Announcements sent</span>
          <span class="channel-stat-value">
            <%= Announcement.joins(:audiences).where(audiences: { type: 'SlackAudience' }).where(status: 'sent').count %>
          </span>
        </div>
      </div>
      
      <div class="channel-actions">
        <%= link_to "View All", slack_audiences_path, class: "btn btn-primary" %>
        <%= link_to "Create New", new_slack_audience_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <!-- Email Card -->
    <div class="channel-card">
      <div class="channel-header email-gradient">
        <div class="channel-icon">ðŸ“§</div>
        <h2>Email Audiences</h2>
        <p>Manage your email lists</p>
      </div>
      
      <div class="channel-body">
        <div class="channel-stat">
          <span class="channel-stat-label">Total audiences</span>
          <span class="channel-stat-value"><%= EmailAudience.count %></span>
        </div>
        <div class="channel-stat">
          <span class="channel-stat-label">Total recipients</span>
          <span class="channel-stat-value">
            <%= EmailAudience.sum { |a| a.email_list.length } %>
          </span>
        </div>
        <div class="channel-stat">
          <span class="channel-stat-label">Announcements sent</span>
          <span class="channel-stat-value">
            <%= Announcement.joins(:audiences).where(audiences: { type: 'EmailAudience' }).where(status: 'sent').count %>
          </span>
        </div>
      </div>
      
      <div class="channel-actions">
        <%= link_to "View All", email_audiences_path, class: "btn btn-primary" %>
        <%= link_to "Create New", new_email_audience_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <!-- WhatsApp Card -->
    <div class="channel-card">
      <div class="channel-header whatsapp-gradient">
        <div class="channel-icon">ðŸ“²</div>
        <h2>WhatsApp Audiences</h2>
        <p>Manage your WhatsApp contacts</p>
      </div>
      
      <div class="channel-body">
        <div class="channel-stat">
          <span class="channel-stat-label">Total audiences</span>
          <span class="channel-stat-value"><%= WhatsappAudience.count %></span>
        </div>
        <div class="channel-stat">
          <span class="channel-stat-label">Total contacts</span>
          <span class="channel-stat-value">
            <%= WhatsappAudience.sum { |a| a.phone_numbers.length } %>
          </span>
        </div>
        <div class="channel-stat">
          <span class="channel-stat-label">Announcements sent</span>
          <span class="channel-stat-value">
            <%= Announcement.joins(:audiences).where(audiences: { type: 'WhatsappAudience' }).where(status: 'sent').count %>
          </span>
        </div>
      </div>
      
      <div class="channel-actions">
        <%= link_to "View All", whatsapp_audiences_path, class: "btn btn-primary" %>
        <%= link_to "Create New", new_whatsapp_audience_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
