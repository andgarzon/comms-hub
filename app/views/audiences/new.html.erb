<% content_for :page_title, "New Audience" %>

<div class="page-header">
  <h2 class="page-header__title">Create Audience</h2>
  <p class="page-header__description">Define a new recipient group for your announcements</p>
</div>

<div style="max-width: 800px;">
  <%= form_with(model: @audience, local: true) do |form| %>
    <% if @audience.errors.any? %>
      <div class="alert alert-danger" style="margin-bottom: 24px;">
        <strong style="font-size: 15px; display: block; margin-bottom: 8px;">
          <%= pluralize(@audience.errors.count, "error") %> prevented this audience from being saved:
        </strong>
        <ul style="margin: 8px 0 0 20px;">
          <% @audience.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card" style="margin-bottom: 20px;">
      <div class="card__header">
        <h3 class="card__title">Audience Type</h3>
      </div>
      
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
        <label class="audience-type-option">
          <%= form.radio_button :type, 'StaticAudience', checked: true, class: "type-radio" %>
          <div class="type-content">
            <div class="type-icon">ðŸ“‹</div>
            <div class="type-name">Static Audience</div>
            <div class="type-desc">Manually curated list of recipients. Best for specific teams or departments.</div>
          </div>
        </label>
        
        <label class="audience-type-option">
          <%= form.radio_button :type, 'DynamicAudience', class: "type-radio" %>
          <div class="type-content">
            <div class="type-icon">ðŸ”„</div>
            <div class="type-name">Dynamic Audience</div>
            <div class="type-desc">Auto-updated based on criteria. Recipients calculated when sending.</div>
          </div>
        </label>
      </div>
    </div>

    <div class="card" style="margin-bottom: 20px;">
      <div class="card__header">
        <h3 class="card__title">Basic Information</h3>
      </div>
      
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "e.g., Engineering Team, All Employees" %>
      </div>

      <div class="form-group" style="margin-bottom: 0;">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 3, class: "form-control", placeholder: "Describe who this audience includes..." %>
        <small style="color: var(--text-muted); font-size: 12px; margin-top: 4px; display: block;">
          Optional: Help others understand who's in this audience
        </small>
      </div>
    </div>

    <div class="card dynamic-only" style="margin-bottom: 20px; display: none;">
      <div class="card__header">
        <h3 class="card__title">Dynamic Query</h3>
      </div>
      
      <div class="form-group" style="margin-bottom: 0;">
        <%= form.label :query, "Filter Criteria", class: "form-label" %>
        <%= form.text_area :query, rows: 4, class: "form-control", placeholder: "e.g., department:engineering OR role:developer" %>
        <small style="color: var(--text-muted); font-size: 12px; margin-top: 4px; display: block;">
          Define criteria for automatically selecting recipients
        </small>
      </div>
    </div>

    <div style="display: flex; gap: 12px; justify-content: flex-end;">
      <%= link_to "Cancel", audiences_path, class: "btn btn-secondary" %>
      <%= form.submit "Create Audience", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .audience-type-option {
    position: relative;
    cursor: pointer;
    border: 2px solid var(--border-medium);
    border-radius: var(--radius-md);
    padding: 20px;
    transition: all 0.2s;
    background: white;
    display: block;
  }
  
  .audience-type-option:hover {
    border-color: var(--primary-blue);
    box-shadow: var(--shadow-sm);
  }
  
  .audience-type-option:has(.type-radio:checked) {
    border-color: var(--primary-blue);
    background: rgba(30, 174, 219, 0.05);
  }
  
  .type-radio {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }
  
  .type-content {
    text-align: center;
  }
  
  .type-icon {
    font-size: 32px;
    margin-bottom: 12px;
  }
  
  .type-name {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 6px;
    font-size: 16px;
  }
  
  .type-desc {
    font-size: 13px;
    color: var(--text-secondary);
    line-height: 1.4;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const staticRadio = document.querySelector('input[value="StaticAudience"]');
    const dynamicRadio = document.querySelector('input[value="DynamicAudience"]');
    const dynamicSection = document.querySelector('.dynamic-only');
    
    function updateVisibility() {
      if (dynamicRadio && dynamicRadio.checked) {
        dynamicSection.style.display = 'block';
      } else {
        dynamicSection.style.display = 'none';
      }
    }
    
    if (staticRadio) staticRadio.addEventListener('change', updateVisibility);
    if (dynamicRadio) dynamicRadio.addEventListener('change', updateVisibility);
    
    updateVisibility();
  });
</script>
